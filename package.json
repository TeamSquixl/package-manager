{
  "name": "package-manager",
  "version": "0.1.0",
  "description": "A simple package debugger",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.14"
  },
  "dependencies": {
    "ui-kit": "^0.1.0"
  },
  "main": "main.js",
  "menus": {
    "Developer/Package Manager": {
      "icon": "panel/icon.png",
      "message": "package-manager:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/package-manager.html",
      "type": "dockable",
      "title": "Package Manager",
      "icon": "panel/icon.png",
      "width": 500,
      "height": 800,
      "min-width": 500,
      "shortcuts": {
        "command+f": "focusOnSearch"
      },
      "messages": [
        "package:loaded",
        "package:unloaded"
      ]
    }
  }
}